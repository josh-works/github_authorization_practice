<div class="flex flex-col max-w-full p-8 pt-0 text-xl">
  <div class="max-w-full self-center justify-around">
    <p class="notice pt-6"><%= notice %></p>
    <p class="alert pt-6"><%= alert %></p>
    <% if current_user %>
      <div class="">
        <h5><%= current_user.name %></h5>
        <p><%= current_user.email %></p>
        <% unless current_user.image.nil? %>
          <%= image_tag(current_user.image, size: '60x60')  %>
        <% end %>
      </div>
    <% else %>
      <h5 class="pt-4">there is no current_user</h5>
    <% end %>
  </div>
</div>